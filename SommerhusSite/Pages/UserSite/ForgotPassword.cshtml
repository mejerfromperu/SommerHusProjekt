@page
@model SommerhusSite.Pages.UserSite.ForgotPasswordModel
@{
}

<body class="body">
    <div class="wrapper">
        <div class="forgotbox">
            <div class="forgotbox-header">
                <span class="gradient-text">Glemt Kode</span>
            </div>
            <form method="post" id="resetPasswordForm">
            <div class="input-forgotbox">
                <span asp-validation-for="Email" class="text-danger"></span>
                <label class="forgotlabel">Email</label>
                <input asp-for="Email" class="input-forgotfield" placeholder="Email"/>
            </div>
            <div class="input-forgotbox">
                <span class="text-danger"></span>
                <label class="forgotlabel">Genstart Token</label>
                <input placeholder="Genstart Token" class="input-forgotfield"/>
            </div>
            <div class="input-forgotbox">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
                <label class="forgotlabel">Ny Adgangskode</label>
                <input asp-for="NewPassword" placeholder="Ny Adgangskode" class="input-forgotfield" id="NewPassword" />
            </div>
            <div class="input-forgotbox">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <label class="forgotlabel">Bekræft Adgangskode</label>
                <input asp-for="ConfirmPassword" placeholder="Nuværende adgangskode" class="input-forgotfield" id="ConfirmPassword" />
            </div>

            <span id="passwordMismatchError" class="text-danger" style="display:none;">Adgangskoderne matcher ikke</span>

            <div class="col-12 row d-flex justify-content-center">
                <div class="col-6">
                        <input type="submit" value="Godkend" class="btn btn-outline-dark btnSpecial rounded-pill" style="margin-top: 15px; margin-left: 15%; margin-right: 5%; width: 100%;" />
                </div>
                <div class="col-6">
                    <input type="submit" value="Cancel" class="btn btn-danger btn-outline-dark rounded-pill" style="margin-top: 15px; margin-left: 15%; margin-right: 5%; width: 80%;" asp-page-handler="Cancel" />
                </div>
            </div>
            </form>
        </div>
    </div>
</body>

<script>
    document.getElementById('resetPasswordForm').addEventListener('submit', function (e) {
        var newPassword = document.getElementById('NewPassword').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;
        var errorElement = document.getElementById('passwordMismatchError');

        if (newPassword !== confirmPassword) {
            e.preventDefault(); // Prevent form submission
            errorElement.style.display = 'block'; // Show the error message
        } else {
            errorElement.style.display = 'none'; // Hide the error message
        }
    });

    document.getElementById('NewPassword').addEventListener('input', function () {
        var newPassword = document.getElementById('NewPassword').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;
        var errorElement = document.getElementById('passwordMismatchError');

        if (newPassword !== confirmPassword) {
            errorElement.style.display = 'block'; // Show the error message
        } else {
            errorElement.style.display = 'none'; // Hide the error message
        }
    });

    document.getElementById('ConfirmPassword').addEventListener('input', function () {
        var newPassword = document.getElementById('NewPassword').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;
        var errorElement = document.getElementById('passwordMismatchError');

        if (newPassword !== confirmPassword) {
            errorElement.style.display = 'block'; // Show the error message
        } else {
            errorElement.style.display = 'none'; // Hide the error message
        }
    });
</script>

